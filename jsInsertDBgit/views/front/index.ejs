							</thead>
							<% data.forEach(item => { %>
								<tbody>
										<td>
											<%= item.id %>
										</td>
										<td>
											<%= item.name %>
										</td>
										<td>
											<%= item.phone %>
										</td>
										<td>
											<button id="showPopupDepartmentEdit<%= item.id %>" style="color:MidnightBlue">Ред.</button>
											<div id="overlayDepartmentEdit<%= item.id %>"></div>
											<div id="popupDepartmentEdit<%= item.id %>">
												<form method="post" action="/departament/edit/<%= item.id %>">
