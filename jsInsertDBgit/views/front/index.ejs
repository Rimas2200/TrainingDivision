									<input type="text" name="last_name" id="inputTeacher1" placeholder="Фамилия">
									<h2>Имя</h2>
									<input type="text" name="first_name" id="inputTeacher2" placeholder="Имя">
									<h2>Отчество</h2>
									<input type="text" name="middle_name" id="inputTeacher3" placeholder="Отчество">
									<h2>Должность</h2>
									<input type="text" name="position" id="inputTeacher4" placeholder="Должность">
									<h2>Кафедра</h2>
									<input type="text" name="departament" id="inputTeacher5" placeholder="Кафедра">
									<h2>Телефон кафедры</h2>
									<input type="number" id="inputTeacher6" placeholder="Телефон кафедры">
									<button type="submit">Добавить</button>
								</form>
							<button id="closePopupTeacher">Закрыть окно</button>
							</div>		
							<script src="js/addTeacherscript.js"></script>
							<script>
									document.getElementById('searchInputTeacher').addEventListener('input',searchCout)
										let searchTeacher;
									function searchCout(){
										searchTeacher = document.getElementById('searchInputTeacher').value;
										sendDataToServer(searchTeacher);
									}
									function prepareURLToSearch(){
										let urlSearchTeacher = document.getElementById('urlSearchTeacher');
										urlSearchTeacher.action = `professor/search/${searchTeacher}`;
									}
									function sendDataToServer(dataSearchTeacher) {
										fetch('/professor/searchTeacher', {
										method: 'POST',
										body: JSON.stringify({ searchTeacher: dataSearchTeacher }),
										headers: {
										'Content-Type': 'application/json'
										}
									})
								}
							</script>
						<% } %>
						<% if (page === 'direction') { %>
						<h1>Направление</h1>
						<div class="buttons123">
							<div class="search-form"> <!-- Кнопка поиска -->
								<form method="get" id="urlSearchDirection" onsubmit="prepareURLToSearch()" action="direction/search/">
								<input class="search-form-txt" id="searchInputDirection" placeholder="Поиск" size="90" type="text">
								</form>
							</div>
							<div class="">
								<button type="button" id="showPopupDirection" class="add-btn-st btn btn-primary">Добавить</button>
							</div>
							<div class="imp-exp-st">
								<button class="table-btn-st">Импорт</button>
								<button class="table-btn-st">Экспорт</button>
							</div>
						</div>
						<table id="myTableDirection">
							<thead>
								<tr><th width="4%">#</th><th width="8%">Аббревиатура</th><th width="40%">Название направления</th><th width="32%">Факультет</th><th width="8%">Ред.</th><th width="8%">Уд.</th></tr>
							</thead>
							<% data.forEach(item => { %>
								<tbody>
										<td>
											<%= item.id %>
										</td>
										<td>
											<%= item.direction_abbreviation %>
										</td>
										<td>
											<%= item.name %>
										</td>
										<td>
											<%= item.faculty %>
										</td>
										<td>
											<button id="showPopupDirectionEdit<%= item.id %>" style="color:MidnightBlue">Ред.</button>
											<div id="overlayDirectionEdit<%= item.id %>"></div>
											<div id="popupDirectionEdit<%= item.id %>">
												<form method="post" action="/direction/edit/<%= item.id %>">
													<h2>Аббревиатура</h2>
													<input type="text" name="direction_abbreviation" id="inputDirectionEdit1" value="<%= item.direction_abbreviation %>">
													<h2>Дисциплина</h2>
													<input type="text" name="name" id="inputDirectionEdit2" value="<%= item.name %>">
													<h2>Факультет</h2>
													<input type="text" name="faculty" id="inputDirectionEdit3" value="<%= item.faculty %>">
													<button type="submit">Добавить</button>
												</form>
											<button id="closePopupDirectionEdit<%= item.id %>">Закрыть окно</button>
											</div>
										</td>
										<td>
											<form method="post" action="/direction/delete/<%= item.id %>">
												<button style="color: DarkRed;">Удалить</button>
											</form>
										</td>
								</tbody>
							<% }); %>
						</table>
						<div id="overlayDirection"></div>
							<div id="popupDirection">
								<form method="post" action="/addition/direction"><!-- id="inputFormDiscipline" -->
									<h2>Дисциплина</h2>
									<input type="text" name="direction_abbreviation" id="inputDirection1" placeholder="Дисциплина">
									<input type="text" name="name" id="inputDirection2" placeholder="Название направления">
									<input type="text" name="faculty" id="inputDirection3" placeholder="Факультет">
									<button type="submit">Добавить</button>
								</form>
							<button id="closePopupDirection">Закрыть окно</button>
						</div>		
						<script src="js/addDirectionscript.js"></script>
						<script>
							document.getElementById('searchInputDirection').addEventListener('input',searchCout)
								let searchDirection;
							function searchCout(){
								searchDirection = document.getElementById('searchInputDirection').value;
								sendDataToServer(searchDirection);
							}
							function prepareURLToSearch(){
								let urlSearchDirection = document.getElementById('urlSearchDirection');
								urlSearchDirection.action = `direction/search/${searchDirection}`;
							}
							function sendDataToServer(dataSearchDirection) {
								fetch('/direction/searchDirection', {
								method: 'POST',
								body: JSON.stringify({ searchDirection: dataSearchDirection }),
								headers: {
								'Content-Type': 'application/json'
								}
							})
						}
					</script>
					<% } %>
					<% if (page === 'coupleType') { %>
						<h1>Типы пар</h1>
						<div class="buttons123">
						<!--	<div class="search-form">  Кнопка поиска 
								<input class="search-form-txt" id="searchInputTypePair" placeholder="Поиск" size="90" type="text">
							</div>-->
							<div class="">
								<button type="button" id="showPopupTypePair" class="add-btn-st btn btn-primary">Добавить</button>
							</div>
							<div class="imp-exp-st">
								<button class="table-btn-st">Импорт</button>
								<button class="table-btn-st">Экспорт</button>
							</div>
						</div>
						<table id="myTableTypePair">
							<thead>
								<tr><th width="4%">#</th><th width="80%">Тип</th><th width="8%">Ред.</th><th width="8%">Уд.</th></tr>
							</thead>
							<% data.forEach(item => { %>
							<tbody>
									<td>
										<%= item.id %>
									</td>
									<td>
										<%= item.pair_type %>
									</td>
									<td>
											<button id="showPopupTypePairEdit<%= item.id %>" style="color:MidnightBlue">Ред.</button>
											<div id="overlayTypePair1<%= item.id %>"></div>
												<div id="popupTypePair1<%= item.id %>">
													<form method="post" action="/coupleType/edit/<%= item.id %>">
														<h2>Тип пары</h2>
														<input type="text" name="pair_type"  id="inputTypePair2" value="<%= item.pair_type %>">
														<button type="submit">Сохранить</button>
													</form>
												<button id="closePopupTypePair1<%= item.id %>">Закрыть окно</button>
											</div>
									</td>
									<td>
										<form method="post" action="/coupleType/delete/<%= item.id %>">
											<button style="color: DarkRed;">Удалить</button>
										</form>
									</td>
							</tbody>
							
							<% }); %>
						</table>

						<div id="overlayTypePair"></div>
							<div id="popupTypePair">
								<form method="post" action="/addition/coupleType"> <!--id="inputFormTypePair"-->
									<h2>Тип пары</h2>
									<input type="text" id="inputTypePair1" name="pair_type" placeholder="Тип пары">
									<button type="submit">Добавить</button>
								</form>
							<button id="closePopupTypePair">Закрыть окно</button>
						</div>
						
						
						
						
							<script src="js/addPairTypescript.js"></script>
					<% } %>
