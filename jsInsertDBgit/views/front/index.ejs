													<input type="text" name="room_number" id="inputAudienceEdit1" value="<%= item.room_number %>">
													<h2>Корпус</h2>
													<input type="text" name="building" id="inputAudienceEdit2" value="<%= item.building %>">
													<button type="submit">Добавить</button>
												</form>
												<button id="closePopupAudienceEdit<%= item.id %>">Закрыть окно</button>
											</div>
										</td>
										<td>
											<form method="post" action="/classroom/delete/<%= item.id %>">
												<button style="color: DarkRed;">Удалить</button>
											</form>
										</td>
								</tbody>
							<% }); %>
						</table>
						<div id="overlayAudience"></div>
							<div id="popupAudience">
								<form  method="post" action="/addition/classroom"> <!--id="inputFormAudience"-->
									<h2>Аудитории</h2>
									<input type="text" id="inputAudience1" placeholder="Аудитория" name="room_number">
									<h2>Корпус</h2>
									<input type="text" id="inputAudience2" placeholder="Корпус" name="building">
									<button type="submit">Добавить</button>
								</form>
							<button id="closePopupAudience">Закрыть окно</button>
						</div>
							<script src="js/addAudiencescript.js"></script>
							<script>
								document.getElementById('searchInputAudience').addEventListener('input',searchCout)
									let searchClassroom;
								function searchCout(){
									searchClassroom = document.getElementById('searchInputAudience').value;
									sendDataToServer(searchClassroom);
								}
								function prepareURLToSearch(){
									let urlSearchClassroom = document.getElementById('urlSearchClassroom');
									urlSearchClassroom.action = `classroom/search/${searchClassroom}`;
								}
