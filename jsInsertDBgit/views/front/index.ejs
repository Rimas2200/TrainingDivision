							<div class="search-form"> <!-- Кнопка поиска -->
								<form method="get" id="urlSearchTeacher" onsubmit="prepareURLToSearch()" action="professor/search/">
									<input id="searchInputTeacher" class="search-form-txt" placeholder="Поиск по фамилии" size="90" type="text">
								</form>
							</div>
							<div>
								<button type="button" id="showPopupTeacher" class="add-btn-st btn btn-primary">Добавить</button>
							</div>
							<div class="imp-exp-st">
								<button class="table-btn-st">Импорт</button>
								<button class="table-btn-st">Экспорт</button>
							</div>
						</div>
						<table id="myTableTeacher">
							<thead>
							<tr><th width="5%">#</th><th width="15%">Фамилия</th><th width="15%">Имя</th><th width="15%">Отчество</th><th width="10%">Должность</th><th width="15%">Кафедра</th><th width="15%">Телефон кафедры</th><th width="5%">Ред.</th><th width="5%">Уд.</th></tr>
							</thead>
							<tbody>
								<% data.slice(0,50).forEach(item => { %>
										<tr> 
											<td>
												<%= item.id %>
											</td>
											<td>
												<%= item.last_name %>
											</td>
											<td>
												<%= item.first_name %>
											</td>
											<td>
												<%= item.middle_name %>
											</td>
											<td>
												<%= item.position %>
											</td>
											<td>
												<%= item.departement %>
											</td>
											<td>
												телефон
											</td>
											<td>
												<button id="showPopupTeacherEdit<%= item.id %>" style="color:MidnightBlue">Ред.</button>
												<div id="overlayTeacherEdit<%= item.id %>"></div>
												<div id="popupTeacherEdit<%= item.id %>">
													<form method="post" action="/professor/edit/<%= item.id %>">
														<h2>Фамилия</h2>
														<input type="text" name="last_name" id="inputTeacherEdit1" value="<%= item.last_name %>">
														<h2>Имя</h2>
														<input type="text" name="first_name" id="inputTeacherEdit2" value="<%= item.first_name %>">
														<h2>Отчество</h2>
														<input type="text" name="middle_name" id="inputTeacherEdit3" value="<%= item.middle_name %>">
														<h2>Должность</h2>
														<input type="text" name="position" id="inputTeacherEdit4" value="<%= item.position %>">
														<h2>Кафедра</h2>
														<input type="text" name="departament" id="inputTeacherEdit5" value="<%= item.departement %>">
														<h2>Телефон кафедры</h2>
														<input type="number" id="inputTeacherEdit6" value="телефон">
														<button type="submit">Сохранить</button>
													</form>
												<button id="closePopupTeacherEdit<%= item.id %>">Закрыть окно</button>
												</div>
											</td>
											<td>
												<form method="post" action="/professor/delete/<%= item.id %>">
													<button style="color: DarkRed;">Удалить</button>
												</form>
											</td>
										</tr>
								<% }); %>
							</tbody>
						</table>
							<div id="overlayTeacher"></div>
							<div id="popupTeacher">
