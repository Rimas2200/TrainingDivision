												<div id="popupFacultiesEdit<%= item.id %>">
													<form method="post" action="/faculties/edit/<%= item.id %>">
														<h2>Факультет</h2>
														<input type="text" name="faculty_name" id="inputFacultiesEdit1" value="<%= item.faculty_name %>">
